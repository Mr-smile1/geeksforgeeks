
class Solution{

    public static void swap(int arr[], int s, int e){
            int temp = arr[s];
            arr[s] = arr[e];
            arr[e] = temp;
    }

    public static void convertToWave(int arr[], int n){
        for(int i=0;i<n-1;i+=2){
            swap(arr,i,i+1);
        }
    }
}
