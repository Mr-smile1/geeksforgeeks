


class Solution
{
    public long findMinDiff (ArrayList<Long> a, long n, long m)
    {
        Collections.sort(a);   
        long ans =  Integer.MAX_VALUE;
       
        for(int i=0;i<=(int)n-m;i++){
            long d = a.get(i+(int)m-1) - a.get(i);
            
            if(d<ans){
                ans=d;
            }
        }
        return ans;
    }
}


